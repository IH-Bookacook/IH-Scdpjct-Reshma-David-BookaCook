<div class="container login-container">

  <form action="/becomecook" method="post">
    <div class="field">
      <label class="label">Cuisine</label>
      <div class="control">
        <input class="input" type="text" name="cuisine" required id="text-input"
        placeholder="e.g. French">
      </div>
    </div>
    <div class="field">
      <label class="label">Experience</label>
      <div class="control">
        <input class="input" type="text" name="experience" required
      placeholder="e.g., 5 years">
      </div>
    </div>
        <div class="field">
      <label class="label">Description</label>
      <div class="control">
        <input class="textarea" type="text" name="description" required id="text-input"
        placeholder="Your background, your signature dishes etc.">
      </div>
    </div>
        <div class="field">
      <label class="label">Location</label>
      <div class="control">
        <input class="input" type="text" name="location" required
      placeholder="e.g., Paris">
      </div>
    </div>
  <div>
  </div>
    <button class="button is-danger"> Become a cook </button>
  </form>